pipeline {
    agent any
	def mvn_version = 'M3'
    stages{
        stage('Build'){
            steps {
                withEnv( ["PATH+MAVEN=${tool mvn_version}/bin"] ) {
				  bat "mvn clean package"
				}
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
    }
}